<% layout('layouts/boilerplate')%>

    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Register for Events</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form action="/registerEvent" method="post">
                    <div class="modal-body">
                        <div class="container">
                            <% if(typeof user==="undefined"){ %>

                                <% }else{ %>
                                    <%keys = Object.keys(user.registered_events); %>
                                        <% keys.forEach(function(key,ind){ %>
                                            <%if(`${user.registered_events[key]}` === "unregistered") {%>
                                                <div class="row justify-content-md-center">
                                                    <div class="col-2">
                                                        <input name="<%= key %>" value="khikhi" type="checkbox">
                                                    </div>
                                                    <div class="col">
                                                        <%= key %>
                                                    </div>
                                                </div>
                                                <% }else{ %>
                                                    <div class="row justify-content-md-center">
                                                        <div class="col-2">
                                                            <input name="<%= key %>" type="checkbox" checked>
                                                        </div>
                                                        <div class="col">
                                                            <%= key %>
                                                        </div>
                                                    </div>
                                                    <% } %>
                                                        <% }) %>
                                                            <% } %>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Save changes</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="container-fluid events-container">
        <div class="container mt-1 mb-5 mx-auto">
            <div class="row justify-content-lg-center my-1">
                <div class="col-12 col-lg-6 mb-2 mx-md-auto">
                    <div class="circular-menu">
                        <div class="circle">
                            <div class="center-img"></div>
                            <img alt="" class="eventImg" />
                            <img alt="" class="eventImg" />
                            <img alt="" class="eventImg" />
                            <img alt="" class="eventImg" />
                            <img alt="" class="eventImg" />
                            <img alt="" class="eventImg" />
                            <img alt="" class="eventImg" />
                            <img alt="" class="eventImg" />
                            <img alt="" class="eventImg" />
                            <img alt="" class="eventImg" />
                            <img alt="" class="eventImg" />
                            <img alt="" class="eventImg" />
                        </div>
                    </div>
                </div>
                <div class="col-12 col-lg-6 mb-2 mx-auto my-3 my-md-5 eventInfo">
                    <div class="card mx-auto" style="width: 75%">
                        <div class="card-body eventCard">
                            <h4 class="card-title">Card title</h4>
                            <p class="card-text mt-3 event-content">
                                Lorem ipsum dolor sit amet, consectetur adipisicing elit. Impedit velit placeat, eos doloribus incidunt atque excepturi asperiores distinctio fugiat optio est dolorem quas quisquam doloremque. Veniam rerum id aut? Eius?
                            </p>
                        </div>
                        <div class="card-body mx-auto">
                            <% if(typeof user==="undefined"){ %>
                                <input class="eventToRegister" name="eventToRegister" value="none" hidden>
                                <input class="user" name="dummy" value="none" hidden>
                                <a href="/register"><button class="btn btn-outline-success register" hidden>Register</button></a>
                                <% }else{ %>
                                    <form action="/registerEvent" method="POST">
                                        <input class="eventToRegister" name="eventToRegister" value="none" hidden>
                                        <button class="btn btn-outline-success register" hidden>Register</button>
                                    </form>
                                    <% } %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script type="text/javascript" src="js/events.js"></script>